{
  "name": "rom-stack",
  "version": "0.0.4",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "esbuild client/src/*.* --bundle --sourcemap --outdir=staticfileserver/dist",
    "build:css": "tailwindcss -i ./client/stylesheets/application.tailwind.css -o ./staticfileserver/dist/application.css --minify",
    "lint": "eslint . --fix",
    "format": "prettier --write ."
  },
  "dependencies": {
    "htmx.org": "1.9.9"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "6.13.2",
    "@typescript-eslint/parser": "6.13.2",
    "autoprefixer": "10.4.16",
    "esbuild": "0.19.8",
    "eslint": "8.55.0",
    "postcss": "8.4.32",
    "prettier": "3.1.0",
    "tailwindcss": "3.3.6",
    "typescript": "5.3.3"
  }
}
